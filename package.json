{
  "name": "claude-agent-sdk-ui",
  "version": "0.1.0",
  "description": "Beautiful CLI UI rendering for Claude Agent SDK",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "example:basic": "tsx examples/basic.ts",
    "example:advanced": "tsx examples/advanced.ts",
    "example:themes": "tsx examples/themes.ts"
  },
  "keywords": [
    "claude",
    "agent",
    "cli",
    "ui",
    "terminal",
    "anthropic",
    "ai"
  ],
  "author": "D.Yang",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "chalk-animation": "^2.0.3",
    "cli-highlight": "^2.1.11",
    "cli-progress": "^3.12.0",
    "cli-spinners": "^3.0.0",
    "cli-table3": "^0.6.5",
    "dayjs": "^1.11.10",
    "figures": "^6.1.0",
    "gradient-string": "^2.0.2",
    "highlight.js": "^11.9.0",
    "log-symbols": "^6.0.0",
    "marked": "^12.0.0",
    "marked-terminal": "^7.0.0",
    "nanoid": "^5.0.5",
    "ora": "^8.0.1",
    "strip-ansi": "^7.1.0",
    "string-width": "^7.1.0",
    "terminal-link": "^3.0.0",
    "wrap-ansi": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.14"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
