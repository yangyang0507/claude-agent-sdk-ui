{
  "name": "claude-agent-sdk-ui",
  "version": "0.1.0",
  "type": "module",
  "description": "Beautiful CLI UI rendering for Claude Agent SDK",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "replay": "node --import tsx/esm bin/replay.ts",
    "demo": "npx tsx --env-file=.env examples/agent-integration/hello-demo.ts",
    "demo:streaming": "npx tsx --env-file=.env examples/agent-integration/hello-streaming-demo.ts"
  },
  "bin": {
    "claude-agent-sdk-ui-replay": "./bin/replay.ts"
  },
  "keywords": [
    "claude",
    "agent",
    "cli",
    "ui",
    "terminal",
    "anthropic",
    "ai"
  ],
  "author": "D.Yang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yangyang0507/claude-agent-sdk-ui.git"
  },
  "bugs": {
    "url": "https://github.com/yangyang0507/claude-agent-sdk-ui/issues"
  },
  "homepage": "https://github.com/yangyang0507/claude-agent-sdk-ui#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "dayjs": "^1.11.10",
    "ink": "^6.3.1",
    "marked": "^12.0.0",
    "marked-terminal": "^7.0.0",
    "react": "^19.2.0",
    "string-width": "^7.1.0",
    "strip-ansi": "^7.1.0",
    "wrap-ansi": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.56.0",
    "ink-testing-library": "^4.0.0",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.14"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
